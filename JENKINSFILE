pipeline {
    agent any

    stages {

        stage('Get Code') {
            steps {
                git branch: 'develop',
                    url: 'https://github.com/denisseroka9/todo-list-aws.git'
            }
        }

        stage('Static Test') {
            steps {
                sh '''
                    echo "Installing static analysis tools"                    
                    pip3 install --no-cache-dir flake8 bandit

                    echo "Creating reports directory"
                    mkdir -p reports

                    echo "Running Flake8"
                     python3 -m flake8 src > reports/flake8.txt || true

                    echo "Running Bandit"
                    python3 -m bandit -r src -f txt -o reports/bandit.txt || true
                '''
            }
            post {
                always {
                    archiveArtifacts artifacts: 'reports/*.txt'
                }
            }
        }

		stage('Deploy SAM') {
		    environment {
				AWS_DEFAULT_REGION = 'eu-east-1'
			}
			steps {
				sh '''
					echo "Building SAM application"
					sam build

					echo "Validating SAM template"
					sam validate

					echo "Deploying to STAGING environment"
					sam deploy --stack-name todo-list-aws --config-env staging  --s3-bucket todo-list-aws-ci-staging-denisse --region us-east-1 --no-confirm-changeset --no-fail-on-empty-changeset
				'''
			}
		}
		
		stage('Service Tests') {
			steps {
				sh '''
					set -e

					API_URL="https://q1hmhlll14.execute-api.us-east-1.amazonaws.com/Prod"

					echo "POST - Create TODO"
					CREATE_RESPONSE=$(curl -s -X POST "$API_URL/todos" \
					  -H "Content-Type: application/json" \
					  -d '{"title":"ci-test","completed":false}')

					echo "$CREATE_RESPONSE" | grep '"title":"ci-test"'
					TODO_ID=$(echo "$CREATE_RESPONSE" | jq -r '.id')
					[ "$TODO_ID" != "null" ]

					echo "GET - List TODOs"
					LIST_RESPONSE=$(curl -s "$API_URL/todos")
					echo "$LIST_RESPONSE" | grep 'ci-test'

					echo "GET - Get TODO by ID"
					GET_RESPONSE=$(curl -s "$API_URL/todos/$TODO_ID")
					echo "$GET_RESPONSE" | grep "$TODO_ID"

					echo "PUT - Update TODO"
					UPDATE_RESPONSE=$(curl -s -X PUT "$API_URL/todos/$TODO_ID" \
					  -H "Content-Type: application/json" \
					  -d '{"title":"ci-test-updated","completed":true}')

					echo "$UPDATE_RESPONSE" | grep 'ci-test-updated'

					echo "DELETE - Delete TODO"
					curl -s -X DELETE "$API_URL/todos/$TODO_ID"

					echo "GET - Verify DELETE"
					curl -s "$API_URL/todos/$TODO_ID" | grep -E 'Not Found|404'
				'''
			}
		}

    }
}
	


