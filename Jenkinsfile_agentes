pipeline {
    agent none

    stages {

        stage('Get Code') {
			 agent { label 'deploy' } 
            steps {
                git branch: 'develop',
                    url: 'https://github.com/denisseroka9/todo-list-aws.git'
					
				stash name: 'source-code', includes: '**/*'
            }
        }

        stage('Static Test') {
			agent { label 'deploy' }
            steps {
				unstash 'source-code'
				
                sh '''
                    echo "Installing static analysis tools"                    
                    pip3 install --no-cache-dir flake8 bandit

                    echo "Creating reports directory"
                    mkdir -p reports

                    echo "Running Flake8"
                     python3 -m flake8 src > reports/flake8.txt || true

                    echo "Running Bandit"
                    python3 -m bandit -r src -f txt -o reports/bandit.txt || true
                '''
            }
            post {
                always {
                    archiveArtifacts artifacts: 'reports/*.txt'
                }
            }
        }

		stage('Deploy SAM') {
			agent { label 'deploy' }
		    environment {
				AWS_DEFAULT_REGION = 'us-east-1'
			}
			steps {
				unstash 'source-code'
			
				sh '''
					echo "Building SAM application"
					sam build

					echo "Validating SAM template"
					sam validate

					echo "Deploying to STAGING environment"
					sam deploy --stack-name todo-list-aws --config-env staging  --s3-bucket todo-list-aws-ci-staging-denisse --region us-east-1 --no-confirm-changeset --no-fail-on-empty-changeset
					
					echo "Obtaining API Base URL from CloudFormation"
					BASE_URL=$(aws cloudformation describe-stacks \
                      --stack-name todo-list-aws \
                      --query "Stacks[0].Outputs[?OutputKey=='BaseUrlApi'].OutputValue" \
                      --output text)
					  
					echo $BASE_URL > base_url.txt
				'''
				
				 stash name: 'api-url', includes: 'base_url.txt'
			}
		}
		
		stage('Rest Tests') {
			agent { label 'test' }
			environment {
				AWS_DEFAULT_REGION = 'us-east-1'
			}
			steps {
				unstash 'source-code'
                unstash 'api-url'
				
				sh '''
					set -e

					echo "Installing test dependencies"
					pip3 install --no-cache-dir pytest requests

					export BASE_URL=$(cat base_url.txt)

					echo "Running integration tests with Pytest"
					python3 -m pytest test/integration/todoApiTest.py
				'''
			}
		}
		
		stage('Promote') {
			agent { label 'deploy' }
			when {
				expression { currentBuild.currentResult == 'SUCCESS' }
			}
			steps {
				unstash 'source-code'
				
				withCredentials([string(credentialsId: 'github-token', variable: 'GITHUB_TOKEN')]) {
					sh '''
						echo "Promoting release to master branch"

						git config user.email "ci@jenkins"
						git config user.name "Jenkins CI"

						git checkout master
						git merge develop
						git push origin master
						git push https://$GITHUB_TOKEN@github.com/denisseroka9/todo-list-aws.git master
					'''
				}
			}
		}

    }
}
	


